<div class='pure-g-r'>

  <div class="toggle-switch">
    <label class="switch-light switch-candy">
      <input type="checkbox">
      <span>
        <span id="search-toggle"><i class="icon-search icon-large"></i></span>
        <span id="queue-toggle"><i class="icon-reorder"></i></span>
      </span>
      <a></a>
    </label>
  </div>
    <div class='queue-container pure-g-r'>
      <p> es ist das queue container </p>
    <table class='queue-table'></table>
  </div>
  <div class="search-container pure-g-r">
    <form class='search-form'>
        <input class='search-input-term'>
        <button class='pure-button search-submit' >Search</button>
    </form>
    <% 40.times do %>
      <div class="pure-u-1-8 single-track">
          <img src="http://rdio-b.cdn3.rdio.com/album/8/2/5/0000000000019528/2/square-200.jpg" class="front-page-art">
          <div>
            <span>Album Name </span>
            <span>Track Name</span>
            <span>Artist Name<i class="icon-thumbs-up icon-2x"></i></span>

          </div>
      </div>
    <% end %>
      <table class='results-table'></table>
    </div>
  </div>
</div>